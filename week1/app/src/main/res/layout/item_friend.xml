<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="28dp"
    android:paddingVertical="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_home_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:cardCornerRadius="12dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_home_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_profile"
        app:layout_constraintStart_toEndOf="@id/iv_home_profile"
        app:layout_constraintTop_toTopOf="@id/iv_home_profile"
        tools:text="손명지" />

    <TextView
        android:id="@+id/tv_home_description"
        android:layout_width="180dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:textSize="14sp"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_friend_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_home_friend_name"
        tools:text="손명지입니다람쥐찍찍" />

</androidx.constraintlayout.widget.ConstraintLayout>